apiVersion: kubevirt.io/v1
kind: VirtualMachineInstance
metadata:
  name: ubuntu-vm-ovs
  namespace: ${NAMESPACE}
spec:
  domain:
    resources:
      requests:
        memory: 1024M
    devices:
      disks:
      - name: containerdisk
        disk:
          bus: virtio
      - name: emptydisk
        disk:
          bus: virtio
      - disk:
          bus: virtio
        name: cloudinitdisk
      interfaces:
      - name: ovs-ipam-net1
        bridge: {}
        ports:
          - port: 22
          - port: 80
          - port: 443
      - name: default
        masquerade: {}
  networks:
  - name: ovs-ipam-net1
    multus:
      networkName: ovs-ipam-net
  - name: default
    pod: {}
  terminationGracePeriodSeconds: 0
  volumes:
  - name: containerdisk
    containerDisk:
      image: tedezed/ubuntu-container-disk:20.0
  - name: emptydisk
    emptyDisk:
      capacity: "8Gi"
  - name: cloudinitdisk
    cloudInitNoCloud:
      networkData: |-
        version: 2
        ethernets:
          enp1s0:
            dhcp4: true
            routes:
              - to: 0.0.0.0/0
                via: ${WHEREABOUTS_GATEWAY}
            nameservers:
              addresses: [8.8.8.8, 8.8.4.4]
              search: [${NAMESPACE}.svc.cluster.local, svc.cluster.local, cluster.local, mpt1.pf9.io]
          enp2s0:
            dhcp4: true
            dhcp4-overrides:
              use-routes: false
              use-dns: false
            routes:
              - to: 0.0.0.0/0
                via: 10.0.2.1
                table: 200
              - to: ${POD_CIDR}
                via: 10.0.2.1
                table: 200
            routing-policy:
              - from: ${POD_CIDR}
                table: 200
                priority: 100
      userData: |-
        #cloud-config
        password: ubuntu
        ssh_pwauth: True
        manage_etc_hosts: true
        chpasswd: { expire: False }
        ssh_authorized_keys:
          - ${PUB_SSH_KEY}
